<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_marginTop="@dimen/extra_top_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:src="@drawable/ic_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:text="@string/welcome"
                android:textColor="@color/black"
                android:textSize="@dimen/movie_name_size"
                app:layout_constraintBottom_toBottomOf="@+id/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/avatar" />


            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/extra_top_margin"
                android:textSize="@dimen/sub_head_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enterButton" />

            <TextView
                android:id="@+id/app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:text="@string/app"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sub_head_size"
                android:layout_marginTop="@dimen/subhead_top_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings5" />

            <LinearLayout
                android:id="@+id/settings1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/movie_description"
                    android:textColor="@color/black"
                    android:text="@string/notification_sound"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/movie_description"
                    android:textColor="@color/black"
                    android:text="@string/confidential"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/settings3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/movie_description"
                    android:textColor="@color/black"
                    android:text="@string/theme"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/settings4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="UseCompoundDrawables"
                app:layout_constraintTop_toBottomOf="@+id/settings3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/movie_description"
                    android:textColor="@color/black"
                    android:text="@string/lang"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/settings5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings4"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/movie_description"
                    android:textColor="@color/black"
                    android:text="@string/data_memory"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginEnd="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/movie_description"
                    android:textColor="@color/black"
                    android:text="@string/bug_report"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/movies_screen_margin"
                android:layout_marginTop="@dimen/description_top_margin"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/logout_button_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings6"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ask_question"
                    android:textColor="@color/black"
                    android:textSize="@dimen/movie_description" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/settings_arrow_height"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="@dimen/small_border_radius"
                app:boxCornerRadiusBottomStart="@dimen/small_border_radius"
                app:boxCornerRadiusTopEnd="@dimen/small_border_radius"
                app:boxCornerRadiusTopStart="@dimen/small_border_radius"
                app:endIconMode="clear_text"
                android:layout_marginTop="@dimen/header_top_margin"
                android:layout_marginStart="@dimen/left_margin_value"
                android:layout_marginEnd="@dimen/left_margin_value"
                app:placeholderTextColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="@dimen/small_border_radius"
                app:boxCornerRadiusBottomStart="@dimen/small_border_radius"
                app:boxCornerRadiusTopEnd="@dimen/small_border_radius"
                app:boxCornerRadiusTopStart="@dimen/small_border_radius"
                app:endIconMode="clear_text"
                android:layout_marginTop="@dimen/small_top_margin"
                android:layout_marginStart="@dimen/left_margin_value"
                android:layout_marginEnd="@dimen/left_margin_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_container">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enterButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter"
                android:layout_marginTop="@dimen/small_top_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_container" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>